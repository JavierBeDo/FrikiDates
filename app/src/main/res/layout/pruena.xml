<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_how_i_perceive_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cómo percibo el mundo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_observer"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:text="Observador" />

        <TextView
            android:id="@+id/tv_analytic"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:text="Analítico" />

        <TextView
            android:id="@+id/tv_versatile"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:text="Versátil" />

        <TextView
            android:id="@+id/tv_proud"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:text="Orgulloso" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="Expand"
            android:src="@drawable/landscapeplaceholder" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_hope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esperanza" />

        <TextView
            android:id="@+id/tv_dreams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sueños" />

        <TextView
            android:id="@+id/tv_friendship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amistad" />

        <TextView
            android:id="@+id/tv_creativity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creatividad" />
    </LinearLayout>

</LinearLayout>
