<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher_foreground_img"
    android:backgroundTint="#00FFFFFF"
    tools:context=".MainMenuActivity">

    <!-- Título de la app -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="FrikiDates"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card info del perfil -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_info"
        android:layout_width="186dp"
        android:layout_height="129dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_title">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="23dp"
                android:layout_height="17dp"
                android:src="@drawable/fem_gender" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age: 25" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ubicación: Barcelona" />

            <TextView
                android:id="@+id/tv_compatibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Muy compatible"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_more_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:contentDescription="Más info"
                android:src="@android:drawable/ic_input_add" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Imagen de perfil (simulada como fondo) -->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/ic_launcher_foreground_img"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_title" />

    <!-- Botones de acción (izquierda, no, sí) -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Volver"
            android:src="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/btn_dislike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:contentDescription="No me gusta"
            android:src="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Me gusta"
            android:src="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <!-- Barra inferior de navegación -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Buscar"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_search" />

        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Chat"
            android:padding="12dp"
            android:src="@android:drawable/ic_dialog_email" />

        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Perfil"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
