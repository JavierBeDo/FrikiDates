<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView para contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FrikiDates"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="16dp" />

            <!-- Información de usuario -->
            <TextView
                android:id="@+id/userInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name:\nEdad:\nGénero:\nUbicación: No modificable"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Galería de fotos -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/userInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landscapeplaceholder" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landscapeplaceholder" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landscapeplaceholder" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landscapeplaceholder" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landscapeplaceholder" />

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/landscapeplaceholder" />

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camera" />
                </FrameLayout>
            </GridLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/descLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descripción"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/gridLayout"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/descEdit"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="top"
                android:hint="Escribe algo sobre ti..."
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@id/descLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Género buscado -->
            <TextView
                android:id="@+id/genderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="¿Qué género buscas?"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/descEdit"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@+id/genderLabel"
                app:layout_constraintBottom_toBottomOf="@+id/genderLabel"
                app:layout_constraintStart_toEndOf="@+id/genderLabel" />

            <!-- Relación buscada -->
            <TextView
                android:id="@+id/relationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="¿Qué tipo de relación buscas?"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/genderLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/findSpinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/relationLabel"
                app:layout_constraintBottom_toBottomOf="@+id/relationLabel"
                app:layout_constraintStart_toEndOf="@+id/relationLabel" />

            <!-- Personalidad (cargada dinámicamente) -->
            <TextView
                android:id="@+id/personalidadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Personalidad:"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/relationLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Aquí puedes cargar la personalidad dinámicamente en código con otro TextView si lo deseas -->

            <!-- Notificaciones -->
            <TextView
                android:id="@+id/notificacionesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Notificaciones"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/personalidadLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <CheckBox
                android:id="@+id/notificationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/notificacionesLabel"
                app:layout_constraintBottom_toBottomOf="@+id/notificacionesLabel"
                app:layout_constraintStart_toEndOf="@+id/notificacionesLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Menú inferior fijo -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/nav_search2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_search" />

        <ImageButton
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@android:drawable/ic_dialog_email" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
